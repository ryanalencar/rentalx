{
  "compilerOptions": {
    "target": "es5",
    "rootDir": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@modules/*": [
        "src/modules/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@test/*": [
        "test/*"
      ]
    }
  },
  "module": "commonjs",
  "strict": false,
  "allowSyntheticDefaultImports": true,
  "forceConsistentCasingInFileNames": true,
  "skipLibCheck": true,
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
